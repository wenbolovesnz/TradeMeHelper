{
	"manifest_version": 2,
	"name": "TradeMe Helper",
	"description": "Adds user comment to the TradeMe website",
	"version":"1.0",

	"page_action":{
		"default_icon": "icon.png",
		"default_title": "TradeMe Helper",
		"default_popup": "popup.html"
	},

	"background":{
		"scripts": ["eventPage.js"],
		"persistent": false
	},

	"content_scripts": [
		{
			"matches": ["http://www.trademe.co.nz/*"],
			"js": ["trademe_cs.js", "jquery-2.0.3.js"]
		}
	],

	"permissions": [
		"tabs",
		"http://www.trademe.co.nz/*"
	]
}